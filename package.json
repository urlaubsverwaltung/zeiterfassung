{
  "private": true,
  "name": "@focus-shift/zeiterfassung",
  "scripts": {
    "build": "concurrently 'npm:lint:*' 'npm:build:*' -c 'bgRed.bold,bgBlue.bold'",
    "build:js": "rollup -c",
    "build:css": "postcss src/main/css/*.css --base src/main/css --dir target/classes/static",
    "dev": "concurrently 'npm:lint:ts -- --watch' 'npm:dev:*' -c 'bgRed.bold,bgBlue.bold'",
    "dev:js": "npm run build:js -- -w",
    "dev:css": "npm run build:css -- --watch",
    "lint": "concurrently 'npm:lint:*'",
    "lint:eslint": "eslint .",
    "lint:svelte": "svelte-check --no-tsconfig",
    "lint:ts": "tsc -noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write src/main/javascript"
  },
  "dependencies": {
    "@duetds/date-picker": "1.4.0",
    "@eslint/compat": "1.4.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@hotwired/turbo": "8.0.13",
    "@popperjs/core": "2.11.8",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@tailwindcss/postcss": "4.1.13",
    "@tsconfig/svelte": "5.0.0",
    "@types/node": "24.5.2",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@ungap/custom-elements": "1.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "9.2.1",
    "cssnano": "7.1.1",
    "date-fns": "3.6.0",
    "esbuild": "0.25.10",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-svelte": "3.12.4",
    "eslint-plugin-unicorn": "61.0.2",
    "fast-glob": "3.3.3",
    "globals": "16.4.0",
    "idiomorph": "0.7.3",
    "jsdom": "27.0.0",
    "lint-staged": "16.2.1",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "prettier": "3.6.2",
    "prettier-plugin-svelte": "3.4.0",
    "rimraf": "6.0.1",
    "rollup": "4.52.3",
    "rollup-plugin-esbuild": "6.2.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-svelte": "7.2.3",
    "svelte": "5.39.6",
    "svelte-check": "4.3.2",
    "svelte-eslint-parser": "1.3.3",
    "svelte-preprocess": "6.0.3",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{js,mjs,ts,svelte,html,svg,css}": [
      "prettier --write"
    ]
  }
}
