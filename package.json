{
  "private": true,
  "name": "@focus-shift/zeiterfassung",
  "scripts": {
    "build": "concurrently 'npm:lint:*' 'npm:build:*' -c 'bgRed.bold,bgBlue.bold'",
    "build:js": "rollup -c",
    "build:css": "postcss src/main/css/*.css --base src/main/css --dir target/classes/static",
    "dev": "concurrently 'npm:lint:ts -- --watch' 'npm:dev:*' -c 'bgRed.bold,bgBlue.bold'",
    "dev:js": "npm run build:js -- -w",
    "dev:css": "npm run build:css -- --watch",
    "lint": "concurrently 'npm:lint:*'",
    "lint:eslint": "eslint .",
    "lint:svelte": "svelte-check --no-tsconfig",
    "lint:ts": "tsc -noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write src/main/javascript"
  },
  "dependencies": {
    "@duetds/date-picker": "1.4.0",
    "@eslint/compat": "1.2.9",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.26.0",
    "@hotwired/turbo": "8.0.13",
    "@popperjs/core": "2.11.8",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@tsconfig/svelte": "5.0.0",
    "@types/node": "22.15.17",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.32.1",
    "@ungap/custom-elements": "1.3.0",
    "@vitest/coverage-v8": "3.1.3",
    "autoprefixer": "10.4.21",
    "concurrently": "9.1.2",
    "cssnano": "7.0.6",
    "date-fns": "3.6.0",
    "esbuild": "0.25.3",
    "eslint": "9.25.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-svelte": "3.5.1",
    "eslint-plugin-unicorn": "56.0.1",
    "fast-glob": "3.3.3",
    "globals": "16.0.0",
    "jsdom": "26.1.0",
    "lint-staged": "15.5.1",
    "postcss": "8.5.3",
    "postcss-cli": "11.0.1",
    "postcss-import": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-svelte": "3.3.3",
    "rimraf": "6.0.1",
    "rollup": "4.40.2",
    "rollup-plugin-esbuild": "6.2.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-svelte": "7.2.2",
    "svelte": "5.28.6",
    "svelte-check": "4.1.6",
    "svelte-eslint-parser": "1.1.3",
    "svelte-preprocess": "6.0.3",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.1",
    "vitest": "3.1.3"
  },
  "lint-staged": {
    "*.{js,mjs,ts,svelte,html,svg,css}": [
      "prettier --write"
    ]
  }
}
