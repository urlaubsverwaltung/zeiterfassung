<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

  <changeSet author="honnel" id="add-timeentry-freeze">
    <preConditions>
      <tableExists tableName="time_entry"/>
      <not>
        <columnExists tableName="time_entry" columnName="is_freezed"/>
      </not>
    </preConditions>

    <addColumn tableName="time_entry">
      <column name="is_freezed" type="BOOLEAN" defaultValue="false">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

  <changeSet author="honnel" id="add-timeentry-versioning-freeze">
    <preConditions>
      <tableExists tableName="time_entry_aud"/>
      <not>
        <columnExists tableName="time_entry_aud" columnName="is_freezed"/>
        <columnExists tableName="time_entry_aud" columnName="is_freezed_mod"/>
      </not>
    </preConditions>

    <addColumn tableName="time_entry_aud">
      <column name="is_freezed" type="BOOLEAN"/>
      <column name="is_freezed_mod" type="BOOLEAN"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>
