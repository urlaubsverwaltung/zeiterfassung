<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

  <changeSet author="honnel" id="subtract-break-from-timeentry">
    <preConditions>
      <not>
        <tableExists tableName="settings_subtract_break_from_time_entry"/>
      </not>
    </preConditions>

    <createSequence sequenceName="settings_subtract_break_from_time_entry_seq" incrementBy="1"/>

    <createTable tableName="settings_subtract_break_from_time_entry">
      <column name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SUBTRACT_BREAK_FROM_TIME_ENTRY"/>
      </column>
      <column name="tenant_id" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="enabled" type="BOOLEAN" defaultValue="false">
        <constraints nullable="false"/>
      </column>
      <column name="enabled_timestamp" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="true"/>
      </column>
    </createTable>

    <createIndex tableName="settings_subtract_break_from_time_entry"
                 indexName="IDX_SUBTRACT_BREAK_FROM_TIME_ENTRY_TENANT_ID">
      <column name="tenant_id"/>
    </createIndex>
  </changeSet>

  <changeSet author="honnel" id="enable-row-level-security-on-settings_subtract_break_from_time_entry">
    <sql dbms="postgresql">
      ALTER TABLE settings_subtract_break_from_time_entry ENABLE ROW LEVEL SECURITY;
      DROP
      POLICY IF EXISTS settings_subtract_break_from_time_entry_tenant_isolation_policy ON settings_subtract_break_from_time_entry;
            CREATE
      POLICY settings_subtract_break_from_time_entry_tenant_isolation_policy ON settings_subtract_break_from_time_entry
                USING (tenant_id = current_setting('app.tenant_id')::VARCHAR);
    </sql>
  </changeSet>

  <changeSet author="honnel" id="insert-settings-subtract-break-from-time-entry-for-tenants">
    <sql>
      INSERT INTO settings_subtract_break_from_time_entry (id, tenant_id, enabled, enabled_timestamp)
      SELECT nextval('settings_subtract_break_from_time_entry_seq'),
             tenant.tenant_id,
             false,
             NULL
      FROM tenant;
    </sql>
  </changeSet>
</databaseChangeLog>
